{
  "name": "CodeSnippetSearch",
  "description": "CodeSnippetSearch",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": [
        "browser-polyfill.min.js",
        "dist/app.umd.min.js"
      ],
      "css": [
        "sidebar.css",
        "highlight.css"
      ]
    }
  ],
  "permissions": [
    "webRequest",
    "contextMenus",
    "https://codesnippetsearch.net/*"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open CodeSnippetSearch sidebar"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"
}
